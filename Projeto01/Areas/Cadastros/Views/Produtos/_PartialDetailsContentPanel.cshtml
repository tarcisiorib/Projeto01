@model Modelo.Cadastros.Produto

<div class="form-group">
    @Html.LabelFor(model => model.Nome)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disbled = "disabled" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Categoria.Nome)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Categoria.Nome, new { htmlAttributes = new { @class = "form-control", disbled = "disabled" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Fabricante.Nome)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Fabricante.Nome, new { htmlAttributes = new { @class = "form-control", disbled = "disabled" } })
    </div>
</div>

<div class="form-group">
    @if (Model.Arquivo == null)
    {
        <div class="form-control-static">Nenhuma imagem adicionada</div>
    }
    else
    {
        <div class="panel-body">
            <img class="img-thumbnail" src="@Url.Action("GetFile", "Produtos", new { id = Model.ProdutoId })" style="display:block;margin-left:auto;margin-right:auto;" />
        </div>
    }
</div>