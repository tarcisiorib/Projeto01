@model Modelo.Cadastros.Produto

@{
    ViewBag.Title = "ALTERAR PRODUTO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            PRODUTO
        </div>
        <div class="panel-body">
            @Html.HiddenFor(model => model.ProdutoId)
            @Html.Partial("~/Areas/Cadastros/Views/Produtos/_PartialEditContentPanel.cshtml", Model)
        </div>
        <div class="panel-footer panel-info">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>
            <br />
            <br />
        </div>
    </div>
}

@section ScriptPage
{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#produtos').addClass("active");
        });
    </script>
}

@section styles
{
    <link href="~/Scripts/jquery-ui-1.12.1/jquery-ui.css" rel="stylesheet" />
}